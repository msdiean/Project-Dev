pipeline {
    agent any

    stages {

        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git credentialsId: 'GitHub',
                    url: 'https://github.com/msdiean/Project-Dev.git'
            }
        }

        stage('NPM Build & Unit Test') {
            steps {
                dir('app/frontend') {
                    sh '''
                        npm install
                        npm test
                    '''
                }
            }
        }
    }
}
